{
	"id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas#BenchmarkingEvent",
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"title": "Benchmarking Event concept (ELIXIR-EXCELERATE WP2 Benchmarking schemas)",
	"type": "object",
	"properties": {
		"_id": {
			"title": "The unique id of the benchmarking event. If it is possible, it should be something meaningful, like an URL",
			"type": "string",
			"minLength": 1
		},
		"_schema": {
			"title": "The document schema URI",
			"type": "string"
		},
		"name": {
			"title": "Short benchmarking event name",
			"minLength": 1,
			"type": "string"
		},
		"is_automated": {
			"title": "Is this an automated event?",
			"type": "boolean"
		},
		"dates": {
			"title": "Relevant dates for this benchmarking event",
			"type": "object",
			"properties": {
				"creation": {
					"title": "Creation date of the benchmarking event",
					"type": "string",
					"format": "date-time"
				},
				"modification": {
					"title": "Last modification date of the benchmarking event",
					"type": "string",
					"format": "date-time"
				},
				"benchmark_start": {
					"title": "When starts the benchmarking event?",
					"type": "string",
					"format": "date-time"
				},
				"benchmark_stop": {
					"title": "When stops the benchmarking event?",
					"type": "string",
					"format": "date-time"
				}
			},
			"required": ["creation","modification","benchmark_start","benchmark_stop"]
		},
		"url": {
			"title": "The link to the benchmarking event",
			"type": "string",
			"format": "uri"
		},
		"community_id": {
			"title": "The community id where this benchmarking event belongs",
			"type": "string",
			"minLength": 1
		},
		"bench_contact_id": {
			"title": "The benchmarking event contact id(s)",
			"type": "array",
			"minLength": 1,
			"items": {
				"type": "string",
				"minLength": 1
			}
		},
		"references": {
			"title": "The benchmarking event reference id(s) (if any)",
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1
			}
		},
                "target-list": {
                        "title": "Benchmarking targets for continuous evaluation",
                        "type": "array",
                        "items" : {
                            "type": "string"
                        }
                },
                "tools" : {
                    "title": "Tools included in TestEvents of the Benchmarking Event",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "foreign_keys": [
                            {
				"schema_id": "Tool",
				"members": [ "." ]
                            }
                        ]
                    }
                },
                "TestEvent" : {
                    "title": "TestEvents of the Benchmarking Event",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "foreign_keys": [
                            {
				"schema_id": "TestEvent",
				"members": [ "." ]
                            }
                        ]
                    }
                },
                "InputDatasets" : {
                    "title": "Datasets marked as Input in TestEVents of the Benchmarking Event",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "foreign_keys": [
                            {
				"schema_id": "Dataset",
				"members": [ "." ]
                            }
                        ]
                    }
                },
                "OutputDatasets" : {
                    "title": "Datasets marked as Output in TestEVents of the Benchmarking Event",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "foreign_keys": [
                            {
				"schema_id": "Dataset",
				"members": [ "." ]
                            }
                        ]
                    }
                },
                "dataLinks" : {
                    "title": "Direct links to datasets included in TestEvents of the Benchmarking Event",
                    "type": "array",
                    "items": {
                        "type": "pbject",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "link": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                },
                "metricsSummary": {
                    "title": "summary of metric results",
                    "type": "object",
                    "properties": {
                        "community_id": {
                            "type": "string",
                            "foreign_keys": [
                                {
                                    "schema_id": "Community",
                                    "members": [ "." ]
                                }
                            ]
                        },
                        "MSResults": {
                            "title": "Object sumarizing results",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties" : {
                                    "dataset_id": {
                                        "type": "string",
                                        "foreign_keys": [
                                            {
                                                "schema_id": "Dataset",
                                                "members": [ "." ]
                                            }
                                        ]
                                    },
                                    "metrics": {
                                        "title": "The different metrics generated from this dataset",
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "metrics_id": {
                                                    "title": "The id of the metrics as such",
                                                    "type": "string",
                                                    "minLength": 1
                                                },
                                                "result": {
                                                    "title": "The results obtained from the metrics",
                                                    "type": "object",
                                                    "additionalProperties": true
                                                }
                                            }
                                        }
                                    }
                                }
                            }
			}
                    }
		},
                "bench_contacts": {
                    "title": "Info contacts",
                    "type": "array",
                    "items": {"$ref": "contact.json"}
                },
                "referencesList": {
                    "title": "Info references",
                    "type": "array",
                    "items": {"$ref": "reference.json"}
                }                
                
        },
	"additionalProperties": true,
	"required": ["_id","_schema","name","is_automated","dates","community_id","bench_contact_id"],
	"dependencies": {}
}
