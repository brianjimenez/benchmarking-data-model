{
	"id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas#Metrics",
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"title": "Metrics concept (ELIXIR-EXCELERATE WP2 Benchmarking schemas)",
	"type": "object",
	"properties": {
		"_id": {
			"title": "The unique id of the metrics.",
			"type": "string",
			"minLength": 1
		},
		"_schema": {
			"title": "The document schema",
			"type": "string"
		},
		"title": {
			"title": "Short metrics name",
			"minLength": 1,
			"type": "string"
		},
		"description": {
			"title": "Long metrics description",
			"type": "string"
		},
                "community_id": {
                        "title": "Community providing metrics",
                        "type": "string",
                        "foreing_keys": [
                            {
                                "schema_id": "Community",
                                "members": ["."]
                            }
                        ]
                },
		"metrics_contact_id": {
			"title": "The contact id(s) of the creators of this metrics",
			"type": "array",
			"minLength": 1,
			"items": {
				"type": "string",
				"minLength": 1
			}
		},
		"formal_definition": {
			"title": "Formal definition of the metrics",
			"type": "string"
		},
		"execution_type": {
			"title": "Type of execution",
			"type": "string"
		},
		"data_schemas": {
			"title": "Data schemas",
			"type": "string"
		},
		"links": {
			"title": "Optional links related to the metrics",
			"type": "array",
			"minLength": 1,
			"items": {
				"type": "object",
				"properties": {
					"uri": {
						"title": "The URI of the link related to the metrics",
						"type": "string",
						"format": "uri"
					},
					"label": {
						"title": "The type of URI",
						"type": "string"
					}
				},
				"additionalProperties": false,
				"required": [
					"uri",
					"label"
				]
			}
		},
		"references": {
			"title": "The metrics reference) (if any)",
			"type": "array",
			"items": {
				"type": {"$ref": "reference.json"}
			}
		},
		"contacts": {
			"title": "The metrics contacts (if any)",
			"type": "array",
			"items": {
				"type": {"$ref": "contact.json"}
			}
		}
	},
	"additionalProperties": true,
	"required": ["_id","_type","_version","title","metrics_contact_id"],
	"dependencies": {}
}
